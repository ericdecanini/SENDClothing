<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/gray_850</item>
        <item name="android:fontFamily">@font/mavenprobold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextProduct">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/coresanse35</item>
    </style>

    <style name="TextToolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/coresanse35</item>
    </style>

</resources>
